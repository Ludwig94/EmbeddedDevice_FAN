<Window x:Class="EmbeddedDevice_FAN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmbeddedDevice_FAN"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="400" Width="250">

    <Window.Resources>
        <Storyboard x:Key="SpinFan" x:Name="SpinFan" RepeatBehavior="Forever">
            <DoubleAnimation x:Name="RotateAnim"
                             Storyboard.TargetName="Rotation"
                             Storyboard.TargetProperty="Angle"
                             From="0" To="360"
                             Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Fan Icon -->
        <TextBlock Grid.Row="0" RenderTransformOrigin="0.5 0.5" Style="{StaticResource fan-icon}">
            <TextBlock.RenderTransform>
                <RotateTransform x:Name="Rotation" Angle="0" />
            </TextBlock.RenderTransform>
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="1">
            <Slider x:Name="Slider_Speed"
                    Minimum="0.2" Maximum="5"
                    Value="1"
                    TickFrequency="0.1"
                    Margin="30 20"
                    ValueChanged="Slider_Speed_ValueChanged"/>
            <Button x:Name="Btn_OnOff"
                    Style="{StaticResource btn-primary}"
                    Content="START"
                    Click="Btn_OnOff_Click"/>
        </StackPanel>
    </Grid>
</Window>